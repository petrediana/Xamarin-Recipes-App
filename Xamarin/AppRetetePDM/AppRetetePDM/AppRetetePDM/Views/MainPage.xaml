<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRetetePDM.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="8" CornerRadius="0">
            <Label Text="Your available recipes" HorizontalTextAlignment="Center" TextColor="White" FontSize="25"/>
        </Frame>

        <StackLayout>
            <ListView ItemsSource="{Binding BaseRecipesCollection}"
                      SelectedItem="{Binding SelectedBaseRecipe}"
                      ItemTapped="ListView_ItemTapped"
                      HasUnevenRows="True"
                      SeparatorColor="Chocolate"
                      SeparatorVisibility="Default">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical" VerticalOptions="FillAndExpand">
                                <Label Text="{Binding RecipeName}" />
                                <Label Text="{Binding RecipeDescriptions}" />
                                <Label Text="{Binding Ingredients}" />
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </StackLayout>
</ContentPage>
