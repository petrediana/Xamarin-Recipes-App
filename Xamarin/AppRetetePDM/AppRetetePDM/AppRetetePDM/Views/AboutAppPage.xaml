<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRetetePDM.Views.AboutAppPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Recipes View 1.0.0.0"
                   FontSize="Large"
                   TextColor="DarkCyan"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"/>

            <Image>
                <Image.Source>
                    <OnPlatform x:TypeArguments="FileImageSource">
                        <On Platform="Android">Cake.jpg</On>
                        <On Platform="UWP">Assets/Cake.jpg</On>
                    </OnPlatform>
                </Image.Source>
            </Image>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>